<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideosPageContent"
    android:orientation="vertical"
    android:background="@drawable/home_bg">


    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mydrawer">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationdrawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            app:itemIconTint="@color/purple_700"
            app:itemTextAppearance="@style/TextViewStyle"
            app:itemHorizontalPadding="30dp"
            app:menu="@menu/navdrawermenu"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header">

        </com.google.android.material.navigation.NavigationView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:background="?actionBarItemBackground"
                    android:id="@+id/sidetoolbar"
                    app:popupTheme="@style/Theme.AppCompat.popUpOverlay"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/togglebutton"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="22dp"
                        android:background="@drawable/ic_menu_icon"
                        android:gravity="start"/>

                </androidx.appcompat.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="65dp"
                            android:src="@drawable/logo3"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/book"
                    android:scaleType="fitXY"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="40dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="70dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic ASL"
                        android:paddingLeft="25dp"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:fontFamily="@font/baloo_thambi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Watch More Videos Below !"
                        android:paddingLeft="25dp"
                        android:textColor="#EFEFEF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-medium"/>

                </LinearLayout>

            </LinearLayout>
            
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="6dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <!--        android:background="@drawable/bg"-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:background="#E3E3E3">

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:src="@drawable/alpabhets"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"/>

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginLeft="0dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Alphabets"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:textColor="#d703082b"
                                            android:layout_marginTop="10dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Basic Alphabets"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:textColor="#4E4E4E"
                                            android:layout_marginTop="5dp"/>


                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="4 Minutes Video"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:textColor="#4E4E4E"
                                                android:layout_marginTop="7dp"/>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:layout_alignParentRight="true">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Play Video"
                                                android:paddingLeft="10dp"
                                                android:textColor="#1565C0"
                                                android:textSize="16sp"
                                                android:fontFamily="sans-serif-condensed-medium"
                                                android:layout_marginTop="5dp"/>

                                            <ImageView
                                                android:layout_width="35dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/ic_baseline_play_circle_24"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="-2dp"
                                                app:tint="@color/purple_500" />


                                        </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="6dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <!--        android:background="@drawable/bg"-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:background="#E3E3E3">

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:src="@drawable/colors"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"/>

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginLeft="0dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Colors"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:textColor="#d703082b"
                                            android:layout_marginTop="10dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Basic Colors"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:textColor="#4E4E4E"
                                            android:layout_marginTop="5dp"/>


                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="4 Minutes Video"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:textColor="#4E4E4E"
                                                android:layout_marginTop="7dp"/>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                android:layout_alignParentRight="true">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Play Video"
                                                    android:paddingLeft="10dp"
                                                    android:textColor="#1565C0"
                                                    android:textSize="16sp"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:layout_marginTop="5dp"/>

                                                <ImageView
                                                    android:layout_width="35dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/ic_baseline_play_circle_24"
                                                    android:layout_gravity="center"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginTop="-2dp"
                                                    app:tint="@color/purple_500" />


                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="6dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <!--        android:background="@drawable/bg"-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:background="#E3E3E3">

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:src="@drawable/numbers"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"/>

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginLeft="0dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Numbers"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:textColor="#d703082b"
                                            android:layout_marginTop="10dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="1 - 10 Numbers"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:textColor="#4E4E4E"
                                            android:layout_marginTop="5dp"/>


                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="4 Minutes Video"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:textColor="#4E4E4E"
                                                android:layout_marginTop="7dp"/>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                android:layout_alignParentRight="true">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Play Video"
                                                    android:paddingLeft="10dp"
                                                    android:textColor="#1565C0"
                                                    android:textSize="16sp"
                                                    android:fontFamily="sans-serif-condensed-medium"
                                                    android:layout_marginTop="5dp"/>

                                                <ImageView
                                                    android:layout_width="35dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/ic_baseline_play_circle_24"
                                                    android:layout_gravity="center"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginTop="-2dp"
                                                    app:tint="@color/purple_500" />


                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>