<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/root">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:src="@drawable/songimage1"
                android:id="@+id/imageviewsongs"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_baseline_play_circle_24"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                app:tint="#CDBD0000" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Youtube Videos Description"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:textColor="#175273"
                android:textSize="13sp"
                android:fontFamily="@font/baloo_thambi"
                android:layout_marginTop="10dp"
                android:id="@+id/titlesongs"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Created By DeafTouch"
                    android:paddingLeft="65dp"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:fontFamily="@font/baloo_thambi"
                    android:layout_marginTop="0dp"
                    android:layout_alignParentBottom="true"
                    android:background="#74ABCBD6"
                    android:paddingTop="9dp"/>


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:src="@drawable/logo2"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="22dp"
                    android:src="@drawable/youtubelogo"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="160dp"
                    android:paddingBottom="5dp"/>



            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>