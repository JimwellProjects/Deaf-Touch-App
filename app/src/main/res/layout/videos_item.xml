<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/youtubevideosimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sampleimagevideos"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/youtubevideosdescription"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="About ASL"
            android:paddingLeft="45dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:fontFamily="@font/baloo_thambi"
            android:layout_marginTop="0dp"
            android:layout_alignParentBottom="true"
            android:background="#74ABCBD6"
            android:paddingTop="4dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:onClick="VideosPage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:backgroundTint="#FFFFFF">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/youtubelogo"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_round3"
            android:backgroundTint="#C6FFFFFF"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/learnicon"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>



        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>